@import 'head'

bg_color = #222
fg_color = #efefef

html, body
  width 100%
  height 100%
  boxsize()

body
  font lucy
  color #dedede
  background #333

#main
  relative top left
  float left
  width 100%
  height 100%

#left
  relative top left
  width 80%
  height 100%
  height calc(100% \- 135px)
  background #333
  float left

#right
  relative top left
  float right
  width 20%
  height calc(100% \- 135px)
  background #323232

#right #snips
  relative top left
  width 100%
  height 100%
  overflow hidden
  overflow-y scroll
  li.snip
    float left
    width 40px
    height 40px
    margin 5px
    canvas
      margin auto
      background #323232
      border 1px solid #444
      cursor pointer
      opacity .7
      &:hover
        opacity 1

#life
  absolute top 50% left 50%
  width 800px
  height 800px
  margin -400px 0 0 -400px
  background #393939
  canvas
    relative top left
    width 100%
    height 100%

#top
  relative top left
  width 100%
  height 135px
  float left
  background #353535

.fld
  relative top left
  float left
  margin 10px
  text-align center

.fld label
  display block
  color #555
  font-size 10px

.fld input
  padding 10px
  background #313131
  font-size 20px
  color #666
  text-align center
  float left
  clear both
  border 1px solid #363636
  width 75px
  height 75px

.fld.link
  margin-top 66px
  float left
  width 20px
  height 20px
  a
    display block
    width 20px
    height 20px
    color #777
    text-decoration none
    -webkit-transform rotate(-45deg)
    i
      width 20px
      height 20px

@import 'tail'

@import 'head'

bg_color  = #272727
fg_color  = #efefef
mid_color = #202020

html, body
  width 100%
  height 100%
  boxsize()

body
  font lucy
  color #dedede
  background bg_color

#main
  relative top left
  float left
  width 100%
  height 100%

#left
  relative top left
  z-index 0
  width 100%
  height 100%
  height calc(100% \- 135px)
  background bg_color
  float left

#right
  fixed top 10px right
  z-index 10
  float right
  width 140px
  //height calc(100% \- 135px)
  height 100%
  background bg_color

#right #sprites
  relative top left
  width 100%
  height 100%
  overflow hidden
  overflow-y scroll
  li.sprite
    float left
    width 121px
    height 121px
    margin 5px 0
    canvas
      margin auto
      background #323232
      border 1px solid lighten(bg_color, 10%)
      cursor pointer
      opacity .7
      &:hover
        opacity 1

#life
  absolute top 50% left 50%
  width 600px
  height 600px
  margin -300px 0 0 -300px
  background mid_color
  canvas
    relative top left
    width 100%
    height 100%
    cursor pointer

#top
  relative top left
  width 100%
  height 135px
  float left
  background bg_color

.fld
  relative top left
  float left
  margin 10px
  text-align center

.fld label
  display block
  color fg_color
  font-size 10px

.fld input
  padding 10px
  background bg_color
  font-size 20px
  color fg_color
  text-align center
  float left
  clear both
  border 1px solid bg_color
  width 75px
  height 75px

.fld.link
  margin-top 66px
  float left
  width 20px
  height 20px
  a
    display block
    width 20px
    height 20px
    color fg_color
    text-decoration none
    -webkit-transform rotate(-45deg)
    i
      width 20px
      height 20px

#space
  absolute bottom left
  z-index 5
  width 100%
  height 100px
  background bg_color
  text-align center
  button
    relative top left
    width 50%
    height 50%
    margin 0
    background lighten(bg_color, 1%)
    color #444
    border 1px solid lighten(bg_color, 6%)
    font-size 16px
    //cursor pointer
    &.on
      border 1px solid lighten(bg_color, 2%)
      background bg_color





@import 'tail'

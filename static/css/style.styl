@import 'head'

html, body
  width 100%
  height 100%
  boxsize()

body
  font lucy
  color #dedede
  background #333

#main
  relative top left
  float left
  width 100%
  height 100%

#left
  relative top left
  width 80%
  height 100%
  background #333
  float left

#right
  relative top left
  float right
  width 20%
  height 100%
  background #323232

#right #snips
  relative top left
  width 100%
  height 100%
  overflow hidden
  overflow-y scroll
  li.snip
    float left
    width 40px
    height 40px
    margin 5px
    canvas
      margin auto
      background #323232
      border 1px solid #444
      cursor pointer
      opacity .7
      &:hover
        opacity 1

#life
  absolute top 50% left 50%
  width 800px
  height 800px
  margin -400px 0 0 -400px
  background #393939
  canvas
    relative top left
    width 100%
    height 100%

.foo div
  background #444
  margin 20px



@import 'tail'
